<table class="ui celled table">
    <thead>
    <tr>
        <th>Date/Time</th>
        <th>Code</th>
        <th>Temperature</th>
        <th>Wind Direction</th>
        <th>Wind Speed</th>
        <th>Pressure</th>
    </tr>
    </thead>
    <tbody>
    {{#each station.readings}}
        <tr>
            <td>
                {{date}}
            </td>
            <td>
                {{code}}
            </td>
            <td>
                {{temp}}
            </td>
            <td>
                {{windDirection}}
            </td>
            <td>
                {{windSpeed}}
            </td>
            <td>
                {{pressure}}
            </td>
            <td>
                <a href="/reading/{{../station.id}}/editreading/{{id}}" class="ui icon red button">
                    <i class="pencil alternate icon"></i>
                </a>
            </td>
            <td>
                <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon red button">
                    <i class="icon trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>